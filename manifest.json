{
  "manifest_version": 4,
  "name": "YouTube Music Manager",
  "version": "1.1.0",
  "description": "YouTube Music Manager adds volume percentages, improves slider responsiveness, and features Auto-Pause to smartly manage playback with other media.",
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://music.youtube.com/*"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  }
}